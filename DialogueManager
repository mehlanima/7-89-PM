-- Proximity prompts in bedroom
local manga = workspace:WaitForChild("Manga")
local chair = workspace:WaitForChild("Chair")
local posters = workspace:WaitForChild("Posters")

-- Proximity prompt in corridor
local corridor_monster = workspace:WaitForChild("Corridor_Monster")

-- Variables that allow us to disable/enable the player's movement
local PlayerModule = require(game:GetService('Players').LocalPlayer.PlayerScripts:WaitForChild('PlayerModule'))
local controls = PlayerModule:GetControls()

local dialogueMod = require(script:WaitForChild("DialogueOne"))

-- Bedroom
-------------------------------------------------------------------------

manga.ProximityPrompt.Triggered:Connect(function()
	controls:Disable()
	dialogueMod.Activated("These are my books. <br /> Mostly manga, but Scott Pilgrim's mixed in there, too.", 0.07)
	controls:Enable()
end)

chair.ProximityPrompt.Triggered:Connect(function()
	controls:Disable()
	dialogueMod.Activated("You can find me sitting here most of the time.", 0.07)
	controls:Enable()
end)

posters.ProximityPrompt.Triggered:Connect(function()
	controls:Disable()
	dialogueMod.Activated("I found these on sale at a flea market. Pretty cool, huh? <br /> I wish I had someone to show these to.", 0.07)
	controls:Enable()
end)

-------------------------------------------------------------------------

-- Corridor

corridor_monster.Touched:Connect(function(touch)
	controls:Disable()
	dialogueMod.Activated("Nil? Tell me you have not forgotten. <br /> Surely, it's all the same to you.", 0.07)
	corridor_monster:Destroy()
	controls:Enable()
end)
